html,
body,
h1,
h2,
h3,
h4,
h5,
h6
  margin: 0
  padding: 0

html,
body
  width 100%
  height 100%
  font-size 12px
  font-family: "PingFang SC", "SourceHanSansCN"

body
  background-color rgba(66, 180, 230, .1)
  overflow hidden

ul,
ol
  list-style: none
  margin: 0
  padding: 0

a
  cursor: pointer
  text-decoration: none

.hidden
  display none

button {
  padding 0
  margin 0
  border none
  outline none
  background transparent
}

.stop-music {
  z-index 1000
  position fixed
  bottom .5rem
  right .5rem
  width .5rem
  height .5rem
  background url("./img/audio-play.png") left top / .5rem auto no-repeat
  &.stop {
    background-image url("./img/audio-stop.png")
  }
}

// top-box
.top-box {
  width 100%
  height 3.44rem
  background url("./img/logo.png") .39rem .28rem / 2rem auto no-repeat, url("./img/topBgMoon.png") left top / 100% auto no-repeat
}

// bottom-box
.bottom-box {
  position fixed
  left 0
  bottom 0
  width 100%
  height 2.43rem
  background url("./img/bottomBg.png") left top / 100% auto no-repeat
  transition all .5s linear
  &.square-bottom {
    height 1.62rem
    background url("./img/squareBg.png") left top / 100% auto no-repeat
  }
}

// step-1
.loading-box {
  padding-top 1.1rem
  .loading-text {
    width 100%
    height 1.46rem
    background url("./img/loadingText.png") center top / 6.16rem auto no-repeat
  }
  .loading {
    width 100%
    height .42rem
    padding-top 2.6rem
    background url("./img/loading.png") center top 2.6rem / 3.36rem auto no-repeat
  }
}

// step-2
.line-box {
  padding-top 1.12rem
  display none
  opacity 0
  .line-text {
    width 100%
    height 1.16rem
    background url("./img/lineText.png") center top / 3.59rem auto no-repeat
  }
  .line {
    position relative
    margin .8rem auto 0
    width 4rem
    height 4rem
    border .05rem solid transparent
  }
}

.line-item {
  position absolute
  background transparent
  transition all .3s
  -webkit-tap-highlight-color: transparent;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  user-select: none;
  &:before {
    position absolute
    content ''
    background #3dcd58
    left 50%
    top 50%
    transform translate(-50%, -50%)
  }
  &.top, &.bottom {
    width calc(4.1rem + .4rem)
    height calc(.05rem + .4rem)
    &:before {
      width: 4.1rem;
      height .05rem
    }
  }
  &.top {
    top .8rem
    left -0.25rem
  }
  &.bottom {
    top 1.47rem
    left -0.25rem
  }
  &.left, &.right {
    width calc(.05rem + .4rem)
    height calc(4.1rem + .4rem)
    &:before {
      height: 4.1rem;
      width .05rem
    }
  }
  &.left {
    top -0.25rem
    left .82rem
  }
  &.right {
    top -0.25rem
    left 1.55rem
  }
}

// step-3
.square-box {
  padding-top .36rem
  display none
  opacity 0
  .square {
    margin 0 auto
    width 3.43rem
    height 3.43rem
    background url("./img/square.png") center top / 3.43rem auto no-repeat
  }
  .square-text {
    margin .29rem auto 0
    height 2.56rem
    background url("./img/squareText.png") center top / 3.45rem auto no-repeat
  }
}

// step-4
.video-box {
  display none
  object-fit fill
  object-position center center
}

// step-5
.picture-box {
  display none
  position relative
  width 100%
  height 100%
  background url("./img/logoBg.png") left top / 2.97rem auto no-repeat, url("./img/pictureBg.png") left top / 100% auto repeat
  & .picture-button {
    position absolute
    left .72rem
    top 8.09rem
    width 3.04rem
    height 3.04rem
    background url("./img/blackLightBg.png") left top / 100% auto no-repeat
    & > div {
      position absolute
      top 50%
      left 50%
      margin-left -.775rem
      margin-top -.775rem
      width 1.55rem
      height 1.55rem
      background url("./img/light.png") left top / 100% auto no-repeat
      &:before {
        position absolute
        content ''
        top 50%
        left 50%
        margin-left -.15rem
        margin-top -.15rem
        width .3rem
        height .3rem
        border-radius 50%
        box-sizing border-box
        background #c7e8fa
        -webkit-animation-timing-function: ease-in-out;
        -webkit-animation-name: breathe;
        -webkit-animation-duration: 2100ms;
        -webkit-animation-iteration-count: infinite;
        -webkit-animation-direction: alternate;
      }
    }
    &.golden {
      left 3.76rem
      top .93rem
      background url("./img/goldenLightBg.png") left top / 100% auto no-repeat
      & > div:before {
        -webkit-animation-duration: 2300ms;
      }
    }
    &.white {
      left 1.49rem
      top 3.98rem
      width 2.24rem
      height 2.24rem
      background url("./img/whiteLightBg.png") left top / 100% auto no-repeat
      & > div:before {
        -webkit-animation-duration: 2000ms;
      }
    }
  }
  & .next-btn {
    display none
    position absolute
    top 6.33rem
    left 6.49rem
    width .56rem
    height .37rem
    background url("./img/next.png") left top / 100% auto no-repeat
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    user-select: none;
  }
  & .btn-group {
    display none
    position absolute
    width 100%
    top 11.1rem
    left 0rem
    text-align center
    & > div {
      position relative
      display inline-block
      margin 0 .5rem
      cursor pointer
      width 1.25rem
      height .44rem
      text-align center
      line-height .44rem
      font-size .25rem
      color rgba(61, 205, 88, 255)
      background rgba(255, 255, 255, .84)
      border-radius .05rem
      box-shadow 0 0 .09rem 0 rgba(0, 0, 0, .36)
      -webkit-tap-highlight-color: transparent;
      -webkit-touch-callout: none;
      -webkit-user-select: none;
      user-select: none;
      &:before {
        position absolute
        content ''
        width 1.4rem
        height .58rem
        border 1px solid #fff
        border-radius .07rem
        box-sizing border-box
        top 50%
        left 50%
        transform translate(-50%, -50%)
      }
    }
  }
  & .picture {
    display none
    width 100%
    height 100%
    background-position left top
    background-repeat no-repeat
    transition all .5s linear
  }
  & .pictuer-info {
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background rgba(33, 33, 33, .7)
    display none
    & .close-btn {
      position absolute
      width 1.2rem
      height .8rem
      top .5rem
      right .5rem
      background url("./img/closePic.png") left top / 100% auto no-repeat
      -webkit-tap-highlight-color: transparent;
      -webkit-touch-callout: none;
      -webkit-user-select: none;
      user-select: none;
    }
    & .product {
      position absolute
      width 4rem
      height 4rem
      left 50%
      top 50%
      transform translate(-50%, -50%)
      background-position left top
      background-repeat no-repeat
      background-size cover
    }
  }
}

.picture {
  background-size 150% auto
}

.picture-white {
  background-image url("img/picture-white.png")
}

.picture-black {
  background-image url("img/picture-black.png")
}

.picture-gloden {
  background-image url("img/picture-gloden.png")
}

.product-white .product {
  background-image url("img/whiteLightBg.png")
}

.product-black .product {
  background-image url("img/blackLightBg.png")
}

.product-gloden .product {
  background-image url("img/goldenLightBg.png")
}

.picture-box.light-active {
  background none
  .btn-group, .picture, .next-btn {
    display: block;
  }
  .picture-button {
    display none
  }
}

// step-6
.end-box {
  padding-top .28rem
  display none
  opacity 0
  & .logo-box {
    width 100%
    height .46rem
    background url("./img/green-logo.png") left .39rem top / 2rem auto no-repeat
  }
  & .small-video-box {
    margin 1.39rem auto 0
    width 6.12rem
    height 4.23rem
    background url("./img/videoBg.png") center top / 100% auto no-repeat
    & video {
      margin 0.46rem 0.42rem
      width 5.26rem
      height 3.02rem
      object-fit fill
      object-position center center
    }
  }
  .ending-text {
    margin .55rem auto 0
    height 1.96rem
    background url("./img/endText1.png") center top / 5.07rem auto no-repeat
  }
  .ending-text2 {
    margin .23rem auto 0
    height .78rem
    background url("./img/endText2.png") center top / 3.46rem auto no-repeat
  }
  .ending-btn {
    display block
    margin .29rem auto 0
    width 1.52rem
    height .69rem
    background url("./img/endBtn.png") left top / 1.52rem auto no-repeat
  }
}

.fadeOut {
  opacity 0
  transition opacity .5s linear
}

.fadeIn {
  opacity 1
  transition opacity .5s linear
}

.backgroundChange {
  background-size 100% auto
}

@keyframes breathe {
  0% {
    opacity: .2;
    box-shadow 0 0 .06rem .14rem rgba(255, 253, 233, .23)
  }
  100% {
    opacity: 1;
    box-shadow 0 0 .16rem .24rem rgba(255, 253, 233, .63)
  }
}